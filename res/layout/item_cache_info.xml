<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_cache_info_IV_icon"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/item_cache_info_IV_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_cache_info_TV_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_cache_info_TV_cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存大小"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_cache_info_IV_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/garbage" />

</RelativeLayout>