<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/Act_Title_Layout" >

        <TextView
            android:id="@+id/ComeBack"
            style="@style/Act_Title_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableLeft="@drawable/event_back_normal"
            android:gravity="center_vertical"
            android:onClick="comeBack"
            android:text="返回" />

        <TextView
            style="@style/Act_Title_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="进程管理" />

        <ImageView
            android:id="@+id/act_process_management_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/setting" 
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/act_process_mg_TV_Memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:text="已用"/>
	<ListView 
	    android:id="@+id/act_process_mg_LV"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="@color/white">
	    
	</ListView>
	<Button 
	    android:id="@+id/act_process_mg_Btn_Clear"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:background="@drawable/btn_background_shape"
	    android:text="立即加速"
	    android:textSize="17sp"
	    android:textColor="@color/white"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="10dp"/>
</LinearLayout>