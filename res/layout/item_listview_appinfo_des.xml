<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/item_listview_appinfo_IV"
        android:layout_width="@dimen/appInfoImageViewDimen"
        android:layout_height="@dimen/appInfoImageViewDimen"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_listview_appinfo_IV"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_listview_appinfo_TV_Name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/item_listview_appinfo_TV_Location"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

</RelativeLayout>